<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:title="@string/title_activity_home"
    tools:context="com.peaceteam.jeremydorne.shoppingwithfriends.HomeActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_friends"
        android:id="@+id/go_to_friends"
        android:onClick="goToFriends"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/interests"
        android:id="@+id/view_interests_button"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/go_to_friends"
        android:onClick="goToInterests"
        tools:ignore="RelativeOverlap" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sales_list_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_report_sale"
        android:id="@+id/report_sale_button"
        android:onClick="goToReportSale"
        android:layout_alignTop="@+id/view_interests_button"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
